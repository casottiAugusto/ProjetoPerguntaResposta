<%- include('partials/header.ejs') %>
  <body>
    <%- include ('partials/navbar.ejs') %>
      <div class="container">
        <hr>
        <h1><%= pergunta.titulo %> </h1>
        <br>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form method="post" action="/responder" >
          <h3>Resposta</h3>
          <label >Resposta:</label>
          <textarea placeholder="Digite Sua resposta" name="corpo" class="form-control"></textarea>
          <br>
          <input type="hidden" name="pergutaIdentifica" value="<%=pergunta.id%>">
          <button type="submit"  class="btn btn-primary" style="margin-top:2vh; " >Enviar </button>
          <a href="/"><button type="button"  class="btn btn-primary" style="margin-top:2vh; " >Voltar  </button></a>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% resposta.forEach(resposta => {%>
          <br>
          <div class="card">
            <div class="card-body">
              <p><%= resposta.corpo%> </p>
            </div>
          </div>
          
       <% }); %>
        
      </div>
  </body>
  <%- include ('partials/footer.ejs') %>