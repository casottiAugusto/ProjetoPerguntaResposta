<%- include('partials/header.ejs') %>

  <body>
    <%- include ('partials/navbar.ejs') %>
      <div class="container">
        <hr>
        <h1 style="margin-left:3vh">Perguntas</h1>
        <br>
        <a href="/perguntar" class="btn btn-primary" style="margin-left:5vh">Perguntar</a>
        <hr>

        <% perguntas.forEach(pergunta=>{%>
          <br>
          <form>
            <div class="card ">

              <div class="card-body">
                <h3 style="margin-left: 1vh">
                  <%= pergunta.titulo %>
                </h3>
              </div>
              <div class="car-footer">
                <hr>
                <a href="/question/<%=pergunta.id%>" >
                  <button type="button" class=" btn btn-primary"
                  style="margin-left:5vh ; margin-bottom: 3vh;" >
                  Resposta
                </button>
                </a>
              </div>
            </div>
          </form>
          <% }); %>
      </div>
  </body>
  <%- include ('partials/footer.ejs') %>